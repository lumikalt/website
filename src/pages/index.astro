---
const title = "lumi";
const description = "a thing that does stuffs";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

import { Image } from "astro:assets";
import "../styles/home.scss";

const MS_PER_YEAR = 1000 * 60 * 60 * 24 * 365.2425;
const years_old: number = Math.floor(
  (Date.now() - new Date("2005-03-17").getTime()) / MS_PER_YEAR
);
---

<!DOCTYPE html>
<html>
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Lumi Kalt" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
  </head>

  <body>
    <div class="bg"></div>
    <div class="noise">
      <div class="inner"></div>
    </div>
    <main>
      <Image
        src="https://avatars.githubusercontent.com/u/99078103"
        alt=""
        height="268"
        width="268"
        loading="eager"
        class="avatar"
      />
      <div class="spacing"></div>
      <div class="container">
        <h1>🐾lumi</h1>
        <h2>she/her 🏳️‍⚧️ {years_old}yo</h2>
        <h2>"woof woof"</h2>
        <div class="links">
          <a href="/blog">
            📰
          </a>
          <a
            href="https://github.com/lumikalt"
            target="_blank"
            rel="noopener noreferrer">
            🐙
          </a>
          <a
            href="https://twitter.com/lumikalt"
            target="_blank"
            rel="noopener noreferrer">
            🐦
          </a>
          <a
            href="mailto:lumi.mia.kalt@gmail.com"
            target="_blank"
            rel="noopener noreferrer">
            📬
          </a>
        </div>
      </div>
    </main>
    <footer>
      <a
        href="https://twitter.com/ecryf_art/status/1526844235277709312"
        target="_blank"
        rel="noopener noreferrer">
        bg src
      </a>
    </footer>
  </body>
</html>
